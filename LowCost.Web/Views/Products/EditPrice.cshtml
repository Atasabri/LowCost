@model PriceViewModel

@{
    ViewData["Title"] = "EditPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Price</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPrice">
            <input asp-for="Id" type="hidden" />
            <input asp-for="Product_Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldPrice" class="control-label"></label>
                <input type="number" asp-for="OldPrice" class="form-control" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Market_Id" class="control-label"></label>
                <select asp-for="Market_Id" asp-items="@(new SelectList(ViewBag.Markets, "Id", "Name", Model.Market_Id))" class="form-control"></select>
                <span asp-validation-for="Market_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-Id="@Model.Product_Id">Back to Edit Page</a>
</div>

