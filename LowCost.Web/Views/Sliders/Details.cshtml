@model  SliderViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string TypeController = "";
    switch (Model.SliderType)
    {
        case SliderType.MainCategory :
            TypeController = "MainCategories";
            break;
        case SliderType.Category:
            TypeController = "Categories";
            break;
        case SliderType.SubCategory:
            TypeController = "SubCategories";
            break;
        case SliderType.Product:
            TypeController = "Products";
            break;
    }
}

<h1>Details</h1>

<div>
    <h4>@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SliderType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SliderType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SliderTypeId)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Details" asp-controller="@TypeController" asp-route-id="@Model.SliderTypeId" target="_blank">View Type</a>
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img asp-append-version="true" src="/Uploads/Sliders/@(Model.Id).jpg" width="600" height="600" />
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {id = Model.Id}) |
    <a asp-action="Index">Back to List</a>
</div>
