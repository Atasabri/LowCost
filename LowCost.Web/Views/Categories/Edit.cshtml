@model CategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Edit Category @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name_AR" class="control-label"></label>
                <input asp-for="Name_AR" class="form-control" />
                <span asp-validation-for="Name_AR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewInApp" class="control-label"></label>
                <input asp-for="ViewInApp" class="form-control" />
                <span asp-validation-for="ViewInApp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainCategory_Id" class="control-label"></label>
                <select asp-for="MainCategory_Id" asp-items="@(new SelectList(ViewBag.MainCategories, "Id", "Name", Model.MainCategory_Id))" class="form-control"></select>
                <span asp-validation-for="MainCategory_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Photo" class="control-label">Photo</label>
                <input name="Photo" type="file" class="form-control" />
                <span name="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Banner" class="control-label">Banner</label>
                <input name="Banner" type="file" class="form-control" />
                <span name="Banner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

